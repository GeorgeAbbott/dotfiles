defix() {
	for i in "$1"*;do mv "$i" "${i#"$1"}";done
}

rd() { # Rename current directory.
	[ "$1" = "" ] && echo "rd: rename directory: new name missing" && return
	curr="$(basename "$(pwd)")"
	cd ..
	mv "$curr" "$1"
	cd "$1" || return
}

# pulseaudio - this is a temporary solution
sv() {
    pactl set-sink-volume 0 $1%
}

pvd() {
    mpv *$1*
}
